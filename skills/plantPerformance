  bot.startConversation(message, function (err, convo) {

            convo.ask("Do you want more details? (Please, choose yes|no)", [
                {
                    pattern: "^yes|yep$",
                    callback: function (response, convo) {
                        convo.gotoThread("success");
                    },
                },
                {
                    pattern: "^no$",
                    callback: function (response, convo) {
                        convo.gotoThread("no");
                    },
                },
                {
                    default: true,
                    callback: function (response, convo) {
                        convo.say("Sorry, I don't undestrand. Try another one...");
                        convo.repeat();
                        convo.next();
                    }
                }
            ], { key: "answer" });

            // Success thread
            convo.addMessage(
                "Cool, I love '{{responses.answer}}' too",
                "success");
                // Success thread
            convo.addMessage(
                "Glad having been helped you",
                "no");
        });
